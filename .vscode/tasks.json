{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++ Compile Run: Compile",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "${workspaceFolder}/main.cpp",
                "-o",
                "${workspaceFolder}/output/main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "C/C++ Compile Run: Run",
            "type": "shell",
            "command": "${workspaceFolder}/output/main.exe",
            "dependsOn": "C/C++ Compile Run: Compile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}